- var items = ['Журнал 1', 'Журнал 2', 'Журнал 3', 'Журнал 4', 'Журнал 5', 'Журнал 6', 'Журнал 7'];
include ./tables.jade
doctype html
html(lang='ru')
  head
    meta(charset='utf-8')
    title Flex example
    base(href='./')
    //- link(rel='stylesheet', href='outlines.css')
    link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.2.0/css/all.css')
    link(rel='stylesheet', href='css/index.css')
  body
    .elogs-container  
      .header
        .header__logo 
            i.fab.fa-font-awesome
            span &nbsp;E-Logs
        .header__title Журнал раппортов по работе с клиентами
        .header__user 
          i.fas.fa-envelope
          i.fas.fa-bell
          span Гаврилов Алексей
          i.fas.fa-user-circle 
          
      .main-container
        .column-left
          .menu__panel
            .menu__title АНАЛИТИКА ЗАВОДА
            i.menu__toggle.fas.fa-bars
          .menu__logo
            i.fas.fa-sitemap
          ul.left-menu 
            each itemName in items
              li.left-menu__item 
                a(href="#") #{itemName}
                  span.fa.fa-chevron-down
          
          .colors-samples
            .color--bg(title="bg")    
            .color--menu1(title="Уровень меню 1")
            .color--menu2(title="Уровень меню 2")
            .color--menu-current(title="Выделенный пункт меню ")
            .color--main(title="main")
            .color--ac1(title="Акцент 1")
            .color--ac2(title="Акцент 2")
            .color--ac3(title="Акцент 3")
                
        .column-content  
          .journal-page
            .journal__panel
              include ./journal__panel.jade
            .journal-tables
              include ./table1.jade
              .journal-table
                .table__title Длинная таблица
                table.table.table-long
                  tr
                    each columnName in ["1","2","3","4","5"]
                      th= columnName
                  each rowName in ["1","2","3"]
                    tr
                      th= rowName
                      td 
                        input.string-cell(value="Lorem ipsum dolor sit amet.")
                      td 
                        input.number-cell(value="1") 
                      td 
                        input.number-cell(value="2")
                      td 
                        input.number-cell(value="3")
                +table__comment

              
  
